<html>
	<head>
		<%- include('head'); -%>
	</head>
	<body class="text-center">
		<%- include('nav'); -%>
		<div class="container content-center">
			<h2 class="raleway">Post</h2>
			<br>
			<% if (typeof errors != 'undefined') { %>
				<% for(var i=0; i < errors.length; i++) { %>
					<div class="alert alert-danger" role="alert">
						<%= errors[i].msg %>
					</div>
				<% } %>
			<% } %>
			<form action="/post" method="POST">
  				<div class="form-group">
    					<input type="text" class="form-control" id="postTitle" name="postTitle" placeholder="Title" autocomplete="off" autofocus required>
  				</div>
  				<div class="form-group">
    					<textarea  type="text" class="form-control" id="postText" name="postText" rows="8" placeholder="Text(optional)"></textarea>
  				</div>
  				<button type="submit" class="btn btn-light wide-button"> Post </button>
			</form>
		</div>
	</body>
</html>
