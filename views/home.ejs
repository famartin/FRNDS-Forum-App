<html>
	<head>
		<%- include('head'); -%>
	</head>
	<body class="text-center">
		<%- include('nav'); -%>
		<div style="margin-top:10em;margin-bottom:2em" class="container">
			<% if (isAuthenticated == true) { %>
				<h2 class="raleway">Hi   <%= firstName %>,</h2><br>
			<% }else { %>
				<h2 class="raleway">Hi there,</h2></br>
			<% } %>
			<% if (typeof posts != undefined) { %>
				<div style="color:black" class="list-group shadow-sm p-1 rounded content-center">
					<% for(var i=posts.length - 1; i >= 0; i--) { %>
     						<a href="/show-post/<%= posts[i]._id %>" class="list-group-item list-group-item-action"><%= posts[i].title %></a>
					<% } %>
				</div>
			<% } %>
		</div>
	</body>
</html>
