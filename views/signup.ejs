<html>
<head>
	<%- include('head'); -%>
</head>
<body>
<%- include('nav'); -%>
<div class="container">
<h2 style="margin-top:3em">Sign Up</h2>
<% if (typeof errors != 'undefined') { %>
<% for(var i=0; i < errors.length; i++) { %>
	<div class="alert alert-danger" role="alert">
		<%= errors[i].msg %>
	</div>
<% } %>
<br>
<% } %>
<% if (typeof uniqueErrors != 'undefined') { %>
	<% if (typeof uniqueErrors.errors.username != 'undefined') { %>
		<div class="alert alert-danger" role="alert">
			<%= uniqueErrors.errors.username.message %>
			</div>
	<% } %>
	<% if (typeof uniqueErrors.errors.email != 'undefined') { %>
		<div class="alert alert-danger" role="alert">
			<%= uniqueErrors.errors.email.message %>
		</div>
	<% } %>
<br>
<% } %>
<form action="/signup" method="POST">
	<div class="form-group">
	<label for="firstName">First Name</label>
	<input type="text" class="form-control" id="firstName" name="firstName" autocomplete="off" required>
	<small class="form-text text-muted">must be between 2-20 characters</small>
	</div>
	<div class="form-group">
	<label for="lastName">Last Name</label>
	<input type="text" class="form-control" id="lastName" name="lastName" autocomplete="off" required>
	<small class="form-text text-muted">must be between 2-25 characters</small>
  	</div>
	<div class="form-group">
	<label for="email">Email</label>
	<input type="email" class="form-control" id="email" name="email" autocomplete="off" required>
  	</div>
	<div class="form-group">
	<label for="username">Username</label>
	<input type="text" class="form-control" id="username" name="username" autocomplete="off" required>
	<small class="form-text text-muted">must be between 5-15 characters</small>
	</div>
	<div class="form-group">
	<label for="password">Password</label>
	<input type="password" class="form-control" id="password" name="password" required>
	<small class="form-text text-muted">must include a lowercase letter, uppercase letter, number, and special character</small>
  	</div>
	<div class="form-group">
	<label for="password2">Confirm Password</label>
	<input type="password" class="form-control" id="password2" name="password2" required>
	</div>
	<button type="submit" class="btn btn-light">Submit</button>
</form>
<p>Already a user?<br><a style="color:grey;text-decoration:none;" href="/login">Login</a></p>
</div>
</body>
</html>
