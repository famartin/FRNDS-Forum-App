<html>
	<head>
		<%- include('head'); -%>
	</head>
	<body class="text-center">
		<%- include('nav'); -%>
		<div class="container">
			<h2 class="raleway"><%= user.firstName %>'s posts</h2>
			<h3 class="raleway">(<%= user.username %>)</h3>
			<% if (typeof posts != undefined) { %>
                                <div style="color:black;"class="list-group shadow-sm p-1 rounded">
                                        <% for(var i=posts.length - 1; i >= 0; i--) { %>
                                                <a style="color:grey;" href="/show-post/<%= posts[i]._id %>" class="list-group-item list-group-item-a    ction"><%= posts[i].title %></a>
                                        <% } %>
                                </div>
                        <% } %>
			<% if (typeof messages != 'undefined') { %>
                                <div style="color:black;"class="list-group shadow-sm p-1 rounded">
                                        <% for(var i=messages.length - 1; i >= 0; i--) { %>
                                        	<%= messages[i].messageText %>
                                        <% } %>
                                </div>
				
			<% } %>
			<br>
			<% if (username == user.username) { %>
				<a href="/profile/<%= user.username %>/edit">
					<button type="button" class="btn btn-light">
						Edit Profile
					</button>
				</a>
					<button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#removeUserConfirmation">
						Delete Account
					</button>
					<div class="modal fade" id="removeUserConfirmation" tabindex="-1" role="dialog" aria-labelledby="removeUserConfirmation" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div style="color:black;" class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title raleway" id="removeUserConfirmationTitle">Wait a minute...</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body raleway">
        Are you sure you want to delete your account?<br>This is permanent.
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
	<a href="/profile/<%= user.username %>/remove">
        <button type="button" class="btn btn-danger">Delete</button>
	</a>
      </div>
    </div>
  </div>
</div>
			<% } %>
		</div>
	</body>
</html>
