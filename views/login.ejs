<html>
	<head>
		<%- include('head'); -%>
	</head>
	<body class="text-center">
		<%- include('nav'); -%>
		<div id="signInContainer" class="container">
			<form class="form-signin" action="/login" method="POST">
				<h2 class="mb-3 raleway font-weight-normal">Log In</h2>
				<label for="username" class="sr-only">Username</label>
				<input type="text" class="form-control" id="username" name="username" placeholder="Username" required autofocus>
				<label for="password" class="sr-only">Password</label>	
				<input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
				<button type="submit" class="btn btn-light btn-lg btn-block">Sign in</button>
				<p class="mt-5 mb-3 raleway">New user?<br><a style="color:grey;text-decoration:none;" href="/signup">Sign Up</a></p>
			</form>
		</div>
	</body>
</html>
